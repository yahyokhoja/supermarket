{
  "name": "universal-supermarket-delivery",
  "version": "2.0.0",
  "description": "Universal supermarket delivery platform with TypeScript backend and React TSX frontend",
  "private": true,
  "scripts": {
    "dev:all": "npm run db:up && npm run dev",
    "dev": "concurrently -k \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "tsx watch src/server.ts",
    "dev:web": "vite --config frontend/vite.config.ts",
    "db:up": "docker compose -f docker-compose.postgres.yml up -d",
    "db:down": "docker compose -f docker-compose.postgres.yml down",
    "db:logs": "docker compose -f docker-compose.postgres.yml logs -f postgres",
    "build:api": "tsc -p tsconfig.json",
    "build:web": "vite build --config frontend/vite.config.ts",
    "vercel-build": "npm run build:web",
    "build": "npm run build:web && npm run build:api",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "pg": "^8.13.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/leaflet": "^1.9.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  }
}
